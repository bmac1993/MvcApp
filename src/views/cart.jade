extends ./base.jade
block append style
	link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
	nav
		.navlink
			a(href="/list") List
		.navlink
			a(href="/cart") Cart
	section#data
		h2 Your Cart
		table
			thead
				th Name
				th Price
			tbody
				each val in data.items
					tr.item
						td.name 
							a(href="/item/"+val.name) #{val.name}
						td.price 
							span #{val.price}
		h3 Total: #{data.total}
block scripts
		script(src="/assets/maker.js")